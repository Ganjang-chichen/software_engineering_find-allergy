<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>알레르기 탐색기</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/main_page.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nanum+Brush+Script&family=Nerko+One&display=swap" rel="stylesheet">

</head>
<body>
    <header>

    </header>
    <main class="main__m-page">
        
        <dir>
            <form action="/mv-allergy_info" method="get">
                <button>
                    <i class="fas fa-info-circle"></i>
                </button>
                <span>allergy info</span>
            </form>
        </dir>

        <dir>
            <form action="/mv-insert_info" method="get">
                <button>
                    <i class="fas fa-plus-square"></i>
                </button>
                <span>insert info</span>
            </form>
        </dir>

        <h1 class="titles__main">Allergy Explorer</h1>

        <dir class="search_box">
            <form action="/main_pageAf" class="form-searchbox" method="post">
                <select name="option" id="search-option">
                    <optgroup label="-option-">
                        <option value="food">food</option>
                        <option value="allergy">allergy</option>
                    </optgroup>
                </select>
                <input type="text" id="search_text" placeholder="Some food" name="searched">
                <button id="search_btn" type="submit">
                    <i class="fas fa-search fa-2x main__search_icon"></i>
                </button>
            </form>
            
        </dir>
    </main>

    <footer>
        <script src="https://kit.fontawesome.com/c9ac2544ad.js" crossorigin="anonymous"></script>
    </footer>
    

